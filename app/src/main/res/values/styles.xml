<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="buttonStyle">@style/MyButtonStyle</item>
    </style>

    <style name="Body1" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Body2" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

     <style name="AppTitle" parent="TextAppearance.AppCompat.Title">
         <item name="android:textSize">48sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/pacifico</item>
    </style>

    <style name="AppBarTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/pacifico</item>
    </style>

    <style name="TabText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
</resources>
